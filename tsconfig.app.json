{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue",
  // "src/**/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    // "noEmit": false,
    // "declaration": true,            // Emit .d.ts files for type declarations
    // "declarationMap": true,         // Emit sourcemaps for .d.ts files
    // "emitDeclarationOnly": true,    // Only emit .d.ts, no compiled JS
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
